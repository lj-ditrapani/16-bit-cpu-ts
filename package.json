{
  "name": "ljd-16-bit-cpu",
  "version": "0.3.4",
  "description": "LJD 16-bit processor",
  "main": "lib/ljd_16_bit_cpu.js",
  "types": "lib/ljd_16_bit_cpu.d.ts",
  "scripts": {
    "test": "nyc -e .ts mocha -r ts-node/register \"test/**/*_test.ts\"",
    "test1": "mocha -r ts-node/register",
    "browser-test": "http-server -p 8000",
    "fmt": "prettier --parser typescript --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "fmtjs": "prettier --write \"*.json\"",
    "tlint": "tslint --fix -c tslint.json '*.ts' 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "npm run tlint && npm run fmt && npm run fmtjs",
    "tsc": "tsc",
    "browser-build": "tsc -p browser-tsconfig.json",
    "doc": "typedoc --excludePrivate --excludeNotExported --out docs/ src && touch docs/.nojekyll",
    "static": "http-server",
    "all": "npm run lint && tsc && npm run browser-build && npm test"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**"
    ]
  },
  "keywords": [
    "cpu",
    "16-bit"
  ],
  "author": "Jonathan Di Trapani",
  "repository": "https://github.com/lj-ditrapani/16-bit-cpu-ts",
  "license": "ISC",
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "@types/sinon": "^10.0.0",
    "http-server": "^0.12.3",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "sinon": "^10.0.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.17.0",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4"
  },
  "files": [
    "lib",
    "browser"
  ]
}
