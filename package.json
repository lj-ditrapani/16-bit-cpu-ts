{
  "name": "ljd-16-bit-cpu",
  "version": "0.4.0",
  "description": "LJD 16-bit processor",
  "main": "lib/ljd_16_bit_cpu.js",
  "types": "lib/ljd_16_bit_cpu.d.ts",
  "scripts": {
    "test": "jest --coverage",
    "browser-test": "http-server -p 8000",
    "lint": "eslint --fix *.js *.json 'src/**/*.ts' 'test/**/*.ts'",
    "ncu": "ncu -u && rm -fr node_modules package-lock.json && npm install",
    "tsc": "tsc",
    "browser-build": "tsc -p browser-tsconfig.json",
    "doc": "typedoc --excludePrivate --out docs/ src/ljd_16_bit_cpu.ts && touch docs/.nojekyll",
    "static": "http-server",
    "all": "npm run lint && tsc && npm run browser-build && npm test"
  },
  "keywords": [
    "cpu",
    "16-bit"
  ],
  "author": "Jonathan Di Trapani",
  "repository": "https://github.com/lj-ditrapani/16-bit-cpu-ts",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "http-server": "^14.1.1",
    "jest": "^28.1.2",
    "npm-check-updates": "^15.2.6",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typedoc": "^0.23.7",
    "typescript": "^4.7.4"
  },
  "files": [
    "lib",
    "browser"
  ]
}
