{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "extends": "@tsconfig/esm/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./browser",
    "newLine": "lf"
  },
  "include": ["src/**/*"]
}
